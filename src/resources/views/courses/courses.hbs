<div class="main">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 min-height">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title size text-center">{{this.name}}</h5>
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
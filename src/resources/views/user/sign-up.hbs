<div class="container">
  <h2 class="text-center">Đăng ký</h2>
  <form class="mt-4" method="post" action="">
    <div class="mb-3">
      <label for="name" class="form-label">Họ và tên</label>
      <input type="name" class="form-control" id="name" aria-describedby="nameHelp" name="name" autocomplete="off">
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" autocomplete="off">
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Mật khẩu</label>
      <input type="password" class="form-control" id="password" name="password" autocomplete="off">
    </div>
    <button type="submit" class="btn btn-primary">Đăng ký</button>
    {{!-- <a href="/users/sign-in" class="btn">Đăng nhập</a> --}}
  </form>
</div>